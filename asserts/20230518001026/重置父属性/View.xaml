<Window
    x:Class="Test.Scenario2.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test.Scenario2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="View"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Width="300"
            Height="30"
            Background="Orange"
            Text="{Binding Path=Model.Id}" />
        <TextBlock
            Width="300"
            Height="30"
            Background="Lime"
            Text="{Binding Path=Model.Name}" />
        <Button
            Width="300"
            Height="30"
            Click="Button_Click"
            Content="重置父属性" />
    </StackPanel>
</Window>
