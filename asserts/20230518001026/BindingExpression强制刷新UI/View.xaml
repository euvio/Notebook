<Window
    x:Class="Test.Scenario3.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test.Scenario3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ViewModel"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            x:Name="txt"
            Background="Violet"
            FontSize="30"
            Text="{Binding Path=Name}" />
        <Button
            Click="Button_Click"
            Content="BindingExpression强制刷新UI"
            FontSize="30" />
    </StackPanel>
</Window>
